<h1>Listing products</h1>

<ul>
  <% @products.each do |product| %>
    <li>
      <section class="product">
        <h4><%= link_to product.name, admin_product_path(product) %></h4>
        <h5><%= number_to_currency product.price.price %></h5>
        <%= link_to 'Edit', edit_admin_product_path(product) %>
      </section>
    </li>
  <% end %>
</ul>

